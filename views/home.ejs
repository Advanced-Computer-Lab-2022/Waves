<%- include ("_header.ejs") %>
    <h1>Welcome to this Online Learning System</h1>
    <div class="table-responsive">
        <% if(courses!=null) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Course Title</th>
                        <th>Subtitle</th>
                        <th>Price</th>
                        <th>Short Summary</th>
                        <th>Total Hours</th>
                        <th>Course Rating</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(function(item){ %>
                    <tr>
                        <td>
                            <div class="col dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                <%= item.title%>
                                </button>
                                <form class="dropdown-menu p-4" method="POST" action="add-instructor">
                                    <div class="mb-3">
                                        <label for="exampleDropdownFormEmail2" class="form-label">Subtitle: <%= item.subtitle %></label>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleDropdownFormEmail2" class="form-label">Price: <%= item.price %></label>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleDropdownFormEmail2" class="form-label">Total Hours: <%= item.totalHours %></label>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleDropdownFormEmail2" class="form-label">Course Rating: <%= item.courseRating %></label>
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
      </div>
<%- include ("_footer.ejs") %>